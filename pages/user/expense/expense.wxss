@import '../../common/index.wxss';
.profile {
  display: flex;
  border-bottom: 10px solid #EEECED;
}
.detail {
  width: 50%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: stretch;
}

.desc {
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 30rpx;
  color: gray;
}
.page {
   width: 100%;
   height: 100%;
   background-color: white;
} 

.form {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: auto auto;
  border-bottom: 1px solid #EEECED;
}

.form-item {
  width: 100vw;
  height: 8vh;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.form-item-title {
  height: 8vh;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  font-size: 30rpx;
  line-height: 8vh;
  margin-left: 20rpx;
}

.form-item-image {
  width: 17%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}